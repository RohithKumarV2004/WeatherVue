<%- include("partials/header") -%>

<div class="jumbotron">
      <h1 class="display-4">Enter a city name and units</h1>
      <!-- <div class="container"> -->
        <form id="temperatureForm" method="post" action="/">
          <div class="form-group">
            <label class="form-control" for="city">City:</label>
            <input class="form-control" type="text" id="city" name="city" required>
          </div>
          <div class="form-group">
            <label class="form-control" for="units">Units:</label>
            <select class="form-control" id="units" name="units">
              <option value="metric">Celsius</option>
              <option value="imperial">Fahrenheit</option>
              <option value="standard">Kelvin</option>
            </select>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">GET TEMPERATURE</button>
          </div>
        </form>
      <!-- </div> -->
</div>
<%- include("partials/footer") -%>